<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.submitReviewController">
    <children>
        <Label layoutX="150.0" layoutY="30.0" text="Submit Review" />
        <Label layoutX="50.0" layoutY="80.0" text="Submission:" />
        <TextField fx:id="submissionTextField" layoutX="150.0" layoutY="76.0" prefWidth="200.0" />
        <Label layoutX="50.0" layoutY="130.0" text="Rating:" />
        <TextField fx:id="ratingText" layoutX="150.0" layoutY="126.0" prefWidth="70.0"/>
        <Button fx:id="submitButton" layoutX="150.0" layoutY="180.0" mnemonicParsing="false" onAction="#handleSubmitButtonAction" text="Submit" />
        <Button fx:id="backButton" layoutX="235.0" layoutY="180.0" mnemonicParsing="false" onAction="#handleBackButtonAction" text="Back" />
        <Label fx:id="errorMessageLabel" layoutX="50.0" layoutY="240.0" prefWidth="300.0" textFill="#ff0000" />
    </children>
</AnchorPane>
